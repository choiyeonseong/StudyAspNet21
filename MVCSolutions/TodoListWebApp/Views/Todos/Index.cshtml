@model IEnumerable<TodoListWebApp.Models.Todo>

@{
    ViewData["Title"] = "할일 리스트";
}

<h2>할일 리스트</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">새로운 할일</a>
</p>
<table class="table table-bordered table-striped table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                제목 @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                생성일 @*@Html.DisplayNameFor(model => model.CreationDate)*@
            </th>
            <th>
                완료 @*@Html.DisplayNameFor(model => model.IsDone)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @if (item.IsDone)
                    {
                        <s>@item.Title</s>
                    }
                    else
                    {
                        <span>@item.Title</span>
                    }
                    @*@Html.DisplayFor(modelItem => item.Title)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">변경</a>
                    <a asp-action="Done" asp-route-id="@item.Id" class="btn btn-secondary">완료</a>
                </td>
            </tr>
        }
    </tbody>
</table>
