@model PortpolioWeb.Models.Board

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
        <h2 class="title">Board</h2>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Writer" class="control-label"></label>
                        <input asp-for="Writer" class="form-control" />
                        <span asp-validation-for="Writer" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                <textarea asp-for="Contents" class="form-control" rows="30"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
                                
            <div class="form-group right">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index"  class="btn btn-default" >List</a>
            </div>
        </form>
    </div>
</div>

