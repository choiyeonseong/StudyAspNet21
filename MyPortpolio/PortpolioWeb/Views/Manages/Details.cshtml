@model PortpolioWeb.Models.Manage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
        <h2 class="title"> @Html.DisplayFor(model => model.Cate)</h2>
    </div>
</div>

<div class="row">
    <div class="col-md">
        <div style="font-size:large;">
            <dl class="row">
                <dt class="col-sm-2">
                    제목
                    @*@Html.DisplayNameFor(model => model.Subject)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class="col-sm-2">
                    내용
                    @*@Html.DisplayNameFor(model => model.Contents)*@
                </dt>
                <dd class="col-sm-10">
                    <div style="overflow-x:hidden;overflow-y:auto;width:100%;height:450px">
                        @Html.Raw(Model.Contents)
                    </div>
                </dd>
            </dl>
        </div>
        <div class="form-group float-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">수정</a>&nbsp;
            <a asp-action="Index" class="btn btn-sm">목록</a>
        </div>
    </div>
</div>
