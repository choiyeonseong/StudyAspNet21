@model PortpolioWeb.Models.Manage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
        <h2 class="title">Manage</h2>
    </div>
</div>
<div class="row">
    <div class="col-md">
        <div>
            <dl class="row" style="font-size:large;">
                <dt class="col-sm-2">
                    구분
                    @*@Html.DisplayNameFor(model => model.Cate)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cate)
                </dd>
                <dt class="col-sm-2">
                    제목
                    @*@Html.DisplayNameFor(model => model.Subject)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subject)
                </dd>
                <dt class="col-sm-2">
                    내용
                    @*@Html.DisplayNameFor(model => model.Contents)*@
                </dt>
                <dd class="col-sm-10">
                    <div style="overflow-x:hidden;overflow-y:auto;width:100%;height:300px">
                        @Html.Raw(Model.Contents)
                    </div>
                    @*@Html.DisplayFor(model => model.Contents)*@
                </dd>
                <dt class="col-sm-2">
                    작성일자
                    @*@Html.DisplayNameFor(model => model.RegDate)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegDate)
                </dd>
            </dl>

            <form asp-action="Delete" class="float-right">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="삭제" class="btn btn-danger btn-sm" />&nbsp;
                <a asp-action="Index" class="btn btn-sm">목록</a>
            </form>
        </div>
    </div>
</div>
