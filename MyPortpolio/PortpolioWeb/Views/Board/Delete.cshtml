@model PortpolioWeb.Models.Board

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
        <h2 class="title">Board</h2>
    </div>
</div>

<div class="row">
    <div class="col-md">

        <div class="row">
            <div class="col-md ml-auto mr-auto text-center">
                <h3 class="title float-left"> @Html.DisplayFor(model => model.Subject)</h3>
            </div>
        </div>

        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    작성자
                    @*@Html.DisplayNameFor(model => model.Writer)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Writer)
                </dd>
                <dt class="col-sm-2">
                    내용
                    @*@Html.DisplayNameFor(model => model.Contents)*@
                </dt>
                <dd class="col-sm-10">
                    <div style="overflow-x:hidden;overflow-y:auto;width:100%;height:300px">
                        @Html.Raw(Model.Contents)
                    </div>
                    @*@Html.DisplayFor(model => model.Contents)*@
                </dd>
                <dt class="col-sm-2">
                    작성일자
                    @*@Html.DisplayNameFor(model => model.RegDate)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RegDate)
                </dd>
                <dt class="col-sm-2">
                    조회수
                    @*@Html.DisplayNameFor(model => model.ReadCount)*@
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReadCount)
                </dd>
            </dl>

            <form asp-action="Delete" class="float-right">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="삭제" class="btn btn-danger btn-sm" />&nbsp;
                <a asp-action="Index" class="btn btn-sm">목록</a>
            </form>
        </div>
    </div>
</div>