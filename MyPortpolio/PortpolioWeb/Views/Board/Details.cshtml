@model PortpolioWeb.Models.Board

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}
<div class="row">
    <div class="col-md-8 ml-auto mr-auto text-center">
        <h2 class="title">Board</h2>
    </div>
</div>
<div class="row">
    <div class="col-md">

        <div class="row">
            <div class="col-md ml-auto mr-auto text-center">
                <h3 class="title float-left"> @Html.DisplayFor(model => model.Subject)</h3>
            </div>
        </div>

        <dl class="row">
            <dt class="col-sm-2">
                작성자
                @*@Html.DisplayNameFor(model => model.Writer)*@
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Writer)
            </dd>

            <dt class="col-sm-2">
                내용
                @*@Html.DisplayNameFor(model => model.Contents)*@
            </dt>
            <dd class="col-sm-10">
                <div style="overflow-x:hidden;overflow-y:auto;width:100%;height:300px">
                    @Html.Raw(Model.Contents)
                </div>
                @*@Html.DisplayFor(model => model.Contents)*@
            </dd>

        </dl>

        <div class="form-group float-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">수정</a>&nbsp;
            <a asp-action="Index" class="btn btn-sm">목록</a>
        </div>
    </div>
</div>